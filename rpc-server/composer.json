{
    "name": "kuiper/rpc-server",
    "type": "library",
    "description": "kuiper rpc server component",
    "keywords": [],
    "license": "MIT",
    "authors": [
        {
            "name": "Ye Wenbin",
            "email": "wenbinye@gmail.com"
        }
    ],
    "require": {
        "php": "^7.0",
		"psr/container" : "^1.0",
        "kuiper/rpc": "^0.3",
        "kuiper/serializer": "^0.3",
        "psr/http-message": "^1.0",
        "guzzlehttp/psr7": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.0||^5.0",
        "kuiper/di": "^0.3"
    },
    "suggest": {
        "ext-swoole": "For start standalone server"
    },
    "autoload": {
        "psr-4": {
            "kuiper\\rpc\\server\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "kuiper\\rpc\\server\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-develop": "0.3-dev"
        }
    }
}
